--User
drop table InternProfile;
CREATE TABLE User (
    ID       INTEGER            PRIMARY KEY AUTOINCREMENT DEFAULT 1,
    userName NVARCHAR (100) NOT NULL,
    passWord NVARCHAR (100) NOT NULL,
    role     NVARCHAR (20)  NOT NULL,
    internID INT            NOT NULL,
    foreign key (internID) references InternProfile(ID)
);
delete from User where internID = 1;
-- admin quản lý tuỷen dụng
CREATE TABLE Recruitment_Campaigns (
    ID INTEGER PRIMARY KEY AUTOINCREMENT DEFAULT 1,
    campaignName NVARCHAR(255) NOT NULL,
    position NVARCHAR(255) NOT NULL,
    salary INT NOT NULL,
    education NVARCHAR(255) NOT NULL
);

--Danh sách InternProfie đăng ký

CREATE TABLE InternProfile (
    ID               INTEGER primary key AUTOINCREMENT DEFAULT 1,
    profileFirstName NVARCHAR (50) NOT NULL,
    profileLastName  NVARCHAR (50) NOT NULL,
    profileDOB       DATE NOT NULL,
    profileEmail     NVARCHAR (50) NOT NULL,
    profilePhone     NVARCHAR (20) NOT NULL,
    profileEducation VARCHAR (20) NOT NULL,
    profilePosition  NVARCHAR (50) NOT NULL,
    profileSalary    NVARCHAR (50) NOT NULL,
    status           INTEGER     NOT NULL DEFAULT 0
);

--Danh sách InternProfile được duyệt
CREATE TABLE InternProfileApproved (
    ID               INTEGER primary key AUTOINCREMENT DEFAULT 1,
    profileFirstName NVARCHAR (50) NOT NULL,
    profileLastName  NVARCHAR (50) NOT NULL,
    profileDOB       DATE NOT NULL,
    profileEmail     NVARCHAR (50) NOT NULL,
    profilePhone     NVARCHAR (20) NOT NULL,
    profileEducation VARCHAR (20) NOT NULL,
    profilePosition  NVARCHAR (50) NOT NULL,
    profileSalary    NVARCHAR (50) NOT NULL 
);

--Lên lịch phỏng vấn
CREATE TABLE InternViewForm (
	ID INTEGER PRIMARY KEY AUTOINCREMENT DEFAULT 1,
	candidateName NVARCHAR(255) NOT NULL,
	internViewDateTime DATETIME NOT NULL,
	location NVARCHAR(255) NOT NULL
);

-- staff chương trình đào tạo
CREATE TABLE TrainingForm (
	ID INTEGER PRIMARY KEY AUTOINCREMENT DEFAULT 1,
	programName NVARCHAR(255) NOT NULL,
	startDate DATE NOT NULL,
	endDate DATE NOT NULL,
	sessionStartTime TIME NOT NULL,
	sessionEndTime TIME NOT NULL,
	trainerName NVARCHAR(255) NOT NULL
);